<h1>All articles</h1>
<% @articles.each do |article| %>
<!--   <input id="completed" type="checkbox" disabled="disabled" checked> -->
  <h2 class="title"><%= link_to article.title, article_path(article.id), :class => 'link' %></h2>
  <%= link_to article_path(article), method: :delete, :class => 'link', data: { confirm: "Are you sure?" } do %>
    <i class="las la-trash-alt"></i>
  <% end %>
  <p class="text"><%= article.content %></p>
  <br>
<% end %>

<div class="box_link">
  <i class="las la-plus"></i>
  <%= link_to "Add a new article", new_article_path, :class => 'link' %>
</div>
